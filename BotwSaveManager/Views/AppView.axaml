<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:app="using:BotwSaveManager"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BotwSaveManager.Views.AppView"
        Title="{x:Static app:Meta.Name}"
        Width="600"
        Height="400"
        MinWidth="600"
        MinHeight="400"
        Background="{DynamicResource SystemChromeLowColor}"
        ExtendClientAreaToDecorationsHint="True"
        Icon="/Assets/icon.ico">

    <Grid RowDefinitions="30,*">
        
        <Grid>
            <Image Source="/Assets/icon.ico"
                   Width="24"
                   Margin="3"
                   HorizontalAlignment="Left" />
            <Menu Name="RootMenu"
                  HorizontalAlignment="Left"
                  Margin="30,0,0,0"/>
            <TextBlock Text="{x:Static app:Meta.Footer}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="11"
                       IsHitTestVisible="False" />
        </Grid>


        <Grid Grid.Row="1"
              Name="DropTarget"
              DragDrop.AllowDrop="True"
              Background="Transparent">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                Drag and drop a save folder to open it.
            </TextBlock>
        </Grid>
    </Grid>


</Window>
