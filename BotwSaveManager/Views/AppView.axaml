<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:app="using:BotwSaveManager"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BotwSaveManager.Views.AppView"
        Title="{x:Static app:Meta.Name}"
        Width="600"
        Height="400"
        MinWidth="600"
        MinHeight="400"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        TransparencyLevelHint="AcrylicBlur"
        Icon="/Assets/icon.ico">

    <Grid RowDefinitions="30,*">

        <Panel Grid.RowSpan="2">
            <ExperimentalAcrylicBorder IsHitTestVisible="False">
                <ExperimentalAcrylicBorder.Material>
                    <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                                 MaterialOpacity="0.45"
                                                 TintColor="Black"
                                                 TintOpacity="1" />
                </ExperimentalAcrylicBorder.Material>
            </ExperimentalAcrylicBorder>
        </Panel>
        
        <Grid>
            <Menu Name="RootMenu" HorizontalAlignment="Left" />
            <TextBlock Text="{x:Static app:Meta.Footer}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="11"
                       IsHitTestVisible="False" />
        </Grid>


        <Grid Grid.Row="1"
              Name="DropTarget"
              DragDrop.AllowDrop="True"
              Background="Transparent">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                Drag and drop a save folder to open it.
            </TextBlock>
        </Grid>
    </Grid>


</Window>
